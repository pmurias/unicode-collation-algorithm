{
	"compilerOptions": {
		"module": "commonjs",
		"newLine": "lf",
		"outDir": "build",
		"target": "es2017",
		"lib": ["es2017"],
		"declaration": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
		"strict": true
	},
	"include": [
		"src/**/*.ts"
	]
}
